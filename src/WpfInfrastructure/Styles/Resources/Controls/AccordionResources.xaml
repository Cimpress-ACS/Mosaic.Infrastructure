                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        x:Name="rd0"
                                        Height="Auto" />
                                    <RowDefinition
                                        x:Name="rd1"
                                        Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        x:Name="cd0"
                                        Width="Auto" />
                                    <ColumnDefinition
                                        x:Name="cd1"
                                        Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <primitives:AccordionButton
                                    Name="ExpanderButton"
                                    Grid.Row="0"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="{TemplateBinding FrameworkElement.HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding FrameworkElement.VerticalAlignment}"
                                    HorizontalContentAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding Control.VerticalContentAlignment}"
                                    Background="{TemplateBinding Control.Background}"
                                    Content="{TemplateBinding HeaderedContentControl.Header}"
                                    ContentTemplate="{TemplateBinding HeaderedContentControl.HeaderTemplate}"
                                    FontFamily="{TemplateBinding Control.FontFamily}"
                                    FontSize="{TemplateBinding Control.FontSize}"
                                    FontStretch="{TemplateBinding Control.FontStretch}"
                                    FontStyle="{TemplateBinding Control.FontStyle}"
                                    FontWeight="{TemplateBinding Control.FontWeight}"
                                    Foreground="{TemplateBinding Control.Foreground}"
                                    IsChecked="{TemplateBinding wpftk:AccordionItem.IsSelected}"
                                    IsTabStop="true"
                                    Padding="0,0,0,0"
                                    Style="{TemplateBinding wpftk:AccordionItem.AccordionButtonStyle}"
                                    extensions:AttachedProperties.AdditionalBackground="{TemplateBinding extensions:AttachedProperties.AdditionalBackground}" />
                                <primitives:ExpandableContentControl
                                    Name="ExpandSite"
                                    Grid.Row="1"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="{TemplateBinding FrameworkElement.HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding FrameworkElement.VerticalAlignment}"
                                    HorizontalContentAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
