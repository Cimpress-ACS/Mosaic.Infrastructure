    <StreamGeometry x:Key="StreamGeometry.Ellipse">F1M35.8,17.9C35.8,27.841 27.841,35.8 17.9,35.8 7.959,35.8 0,27.841 0,17.9 0,7.959 7.959,0 17.9,0 27.841,0 35.8,7.959 35.8,17.9</StreamGeometry>

