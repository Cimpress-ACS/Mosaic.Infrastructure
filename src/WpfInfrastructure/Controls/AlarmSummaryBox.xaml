                Width="378"
                Margin="0,3,0,14"
                HorizontalAlignment="Left"
                HorizontalScrollBarVisibility="Disabled"
                IsHitTestVisible="True"
                ItemsSource="{StaticResource Alarms}"
                ScrollViewer.PanningMode="VerticalOnly"
                Style="{StaticResource DataGrid.AlarmSummary}">

                <DataGrid.Columns>
                  <DataGridTemplateColumn
                    MinWidth="28"
                    CellTemplate="{StaticResource DataTemplate.AlarmSummary.Type}"
                    Header="" />
                  <DataGridTemplateColumn
                    x:Name="TimeColumn"
                    MinWidth="0"
                    MaxWidth="0"
                    CellTemplate="{StaticResource DataTemplate.AlarmSummary.Timestamp}"
                    Header="TIME" />
                  <DataGridTemplateColumn
                    x:Name="SourceColumn"
                    MinWidth="0"
                    MaxWidth="0"
                    CellTemplate="{StaticResource DataTemplate.AlarmSummary.Source}"
                    Header="SOURCE" />
                  <DataGridTemplateColumn
                    x:Name="MessageColumn"
                    MinWidth="330"
                    MaxWidth="330"
                    CellTemplate="{StaticResource DataTemplate.AlarmSummary.Message}"
                    Header="MESSAGE" />
                </DataGrid.Columns>
              </DataGrid>
            </TabItem>
          </TabControl>
          <Button
            x:Name="button"
            Grid.Column="0"
            Width="0"
            Height="74"
            Margin="2,0,6,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Opacity="0"
            Style="{DynamicResource Button.Reset}"
            Visibility="Collapsed" />
        </Grid>
      </Grid>
    </Border>
  </Grid>
</UserControl>
